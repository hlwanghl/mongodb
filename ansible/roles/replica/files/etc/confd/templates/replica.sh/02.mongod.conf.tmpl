flush /opt/app/current/conf/mongodb/mongod.conf << MONGOD_CONF_EOF
systemLog:
  destination: syslog
  logAppend: true
storage:
  dbPath: /data/mongodb/data
  engine: wiredTiger
  journal:
    enabled: true
  wiredTiger:
    engineConfig:
      cacheSizeGB: 0.25
processManagement:
   fork: true
   pidFilePath: /var/run/mongodb/mongod.pid
net:
  bindIp: 0.0.0.0
  port: {{ $mongoPort }}
  maxIncomingConnections: {{ getv "/env/maxConns" }}
replication:
  oplogSizeMB: {{ getv "/env/oplogSize" }}
  replSetName: {{ $mongoRsName }}
security:
  authorization: enabled
  keyFile: {{ $mongoKeyFile }}
MONGOD_CONF_EOF
